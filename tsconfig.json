{
  "compilerOptions": {
    "skipLibCheck": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "es2019", "dom", "scripthost", "esnext.asynciterable"],
    "importsNotUsedAsValues": "error",
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "./public"
  },
  "paths": {
    "@/*": ["src/*"],
  },
  "include": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.stories.tsx",
    "./src/stories.ts",
    "./src/custom.d.ts",
  ],
  "exclude": ["node_modules"]
}
